@using (Ajax.BeginForm("Index", new { id = ViewBag.MovieId }, new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.InsertBefore,
    UpdateTargetId = "reviews",
}))
{
    @Html.AntiForgeryToken();
    <div class="form-group">
        <textarea class="form-control" id="content" name="content" placeholder="Enter text for your review"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Add Review</button>
    </div>
}