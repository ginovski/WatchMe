@model WatchMe.Web.ViewModels.Actors.ActorDetailsViewModel

<div class="movie-wrapper">
    <div class="row">
        <div class="col-md-4">
            <h3>@(Model.FirstName + " " + Model.LastName)</h3>
        </div>
        <div class="col-md-8">
            <div class="rate">
                <input type="radio" id="star5" name="rate" value="5" />
                <label for="star5" title="5">5 stars</label>
                <input type="radio" id="star4" name="rate" value="4" />
                <label for="star4" title="4">4 stars</label>
                <input type="radio" id="star3" name="rate" value="3" />
                <label for="star3" title="3">3 stars</label>
                <input type="radio" id="star2" name="rate" value="2" />
                <label for="star2" title="2">2 stars</label>
                <input type="radio" id="star1" name="rate" value="1" />
                <label for="star1" title="1">1 star</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
            {
                <img src="@Model.ProfileImagePath" />
            }
        </div>
        <div class="col-md-4">
            <p class="firstName"><strong>First name: </strong> @Model.FirstName</p>
            <p class="lastName"><strong>Last name: </strong> @Model.LastName</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div id="movies">
                <h3>Known for</h3>
                <table class="table table-striped" style="border: 1px solid #dfd7ca">
                    @foreach (var movie in Model.Movies)
                    {
                        <tr class="movie">
                            <td>
                                @if (!string.IsNullOrEmpty(movie.ImagePath))
                                {
                                    <img src="@movie.ImagePath" width="50" />
                                }
                                <strong class="name"><a href="/Movies/Details/@movie.Id">@movie.Title</a></strong>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</div>
