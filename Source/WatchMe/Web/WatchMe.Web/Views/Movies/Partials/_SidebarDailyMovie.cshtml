@model WatchMe.Web.ViewModels.Movies.DailyMovieViewModel

<div class="panel panel-default">
    <div class="panel-body text-center">
        <h1>Daily Movie</h1>
        <img src="@Model.ImagePath" />
        <h3>@Model.Title</h3>
        <p class="text-muted">@string.Join(", ", Model.Categories)</p>
        @Html.ActionLink("More details", "Details", "Movies", new { id = Model.Id }, null)
    </div>
</div>